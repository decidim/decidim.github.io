<section class="bg-red-100">
  <div class="container py-8 md:py-24 text-red-500">
    <h6 class="h6"><%= t("used_by.facts.title") %></h6>
    <p class="par-xl"><%= t("used_by.facts.subtitle") %></p>
    <div class="grid md:grid-cols-3 mt-16 gap-x-7 gap-y-7 md:gap-y-24">
      <% data.used_by.each do |use| %>
        <div class="space-y-3">
          <h2 class="h2"><%= use.value %></h2>
          <h6 class="h6"><%= t("used_by.facts.#{use.text}") %></h6>
        </div>
      <% end %>
  </div>
</section>
