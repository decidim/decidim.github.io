<div class="flex flex-col md:flex-row items-stretch space-y-6 md:space-y-0 md:space-x-6 mt-12">
  <% data.testimonials.sample(2).each do |testimonial| %>
    <div class="md:w-1/3 flex flex-col">
      <div class="rounded-xl overflow-hidden bg-gray-300 mb-4"><img class="w-full aspect-[4/3] object-cover" src="<%= testimonial.image %>" alt="<%= testimonial.name %>"></div>
      <h5 class="h5 mb-4"><%= t("testimonials.#{testimonial.id}.org") %></h5>
      <p class="par-md mb-4"><%= t("testimonials.#{testimonial.id}.quote").truncate(120, separator: ' ') %></p>
      <%= partial "partials/arrow-link", locals: { text: t("get-started.section3.link"), url: testimonial.url, classes: "mt-auto block" } %>
    </div>
  <% end %>
  <a href="<%= t(:path) %>/blog" class="md:w-1/3 flex md:flex-col bg-red-100 rounded-xl text-red-500 p-6">
    <h4 class="h4"><%= t("get-started.section3.cta") %></h4>
    <%= icon "ri-arrow-right-line", class: "w-7 h-7 mt-4" %>
  </a>
</div>
