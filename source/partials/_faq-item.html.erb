<% if item.is_a?(Hash) %>
<div class="p-5 rounded-xl overflow-hidden cursor-pointer <%= classes ||= '' %>" data-accordion-id="<%= SecureRandom.hex[0..7] %>">
  <div class="flex items-center justify-between space-x-4">
      <h6 class="h6"><%= item[:question] %></h6>
      <div class="flex-none relative inline w-5 h-5">
        <%= icon "ri-add-line", class: "absolute w-5 h-5" %>
        <%= icon "ri-subtract-line", class: "absolute w-5 h-5" %>
      </div>
    </div>
    <div class="par-md text-gray-500 pointer-events-none -translate-y-full max-h-0 opacity-0 transition-all">
      <%= item && markdown(item[:answer]) %>
    </div>
  </div>
<% end %>
