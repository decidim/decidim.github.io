<div class="grid grid-cols-6 gap-8 md:gap-16 <%= classes ||= '' %>">
  <% data_sort_by_priority(data_select_home(data.installations)).take(6).each_with_index do |logo, i| %>
    <a class="h-8 md:h-16 block cursor-pointer md:col-span-1 <%= i > 4 ? 'col-span-6' : i > 2 ? 'col-span-3' : 'col-span-2' %>" href="<%= logo[1][:url] %>" target="_blank" rel="noopener noreferrer">
      <img class="w-full h-full object-contain grayscale" src="<%= logo[1][:image] %>" alt="<%= logo[1][:name] %>">
    </a>
  <% end %>
</div>
