<div class="mt-6 md:mt-8 flex flex-col md:flex-row items-start space-y-6 md:space-y-0 md:space-x-48">
  <div class="divide-y-4 divide-gray-100">
    <div></div>
    <% blog.articles.take(length ||= blog.articles.length).each do |article| %>
      <a href="<%= article.url %>" target="_blank" rel="noopener noreferrer" class="flex justify-between space-x-4 py-6">
        <div>
          <h6 class="h6"><%= article.title %></h6>
          <p class="par-sm text-gray-500"><%= article.date.strftime('%d/%m/%Y') %></p>
        </div>
        <%= icon "ri-article-line", class: "w-10 h-10 text-gray-300 flex-none" %>
      </a>
    <% end %>
    <div></div>
  </div>
  <a href="<%= t(:path) %>/contact" class="md:w-1/3 shrink-0 flex md:flex-col bg-red-100 rounded-xl text-red-500 p-6 md:pb-16">
    <h4 class="h4"><%= t("press.sign_up") %></h4>
    <%= icon "ri-arrow-right-line", class: "w-7 h-7 mt-4 flex-none" %>
  </a>
</div>
