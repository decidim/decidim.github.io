<footer class="bg-black text-white text-xs">
  <div class="container py-4 space-y-12">
    <div class="flex items-center mt-8">
      <a class="w-3/4" href="<%= t(:path) %>/"><img src="/images/decidim-symbol.svg" alt="Decidim" /></a>

      <nav class="w-1/4 flex items-center space-x-2">
        <% data.links.social_media.each do |link| %>
          <% link_to link.url do %>
            <%= icon link.icon, class: "text-xl" %>
          <% end %>
        <% end %>
      </nav>
    </div>

    <div class="flex">
      <div class="w-3/4 flex">
        <div class="w-1/3">
          <h3 class="font-bold mb-3">Decidim</h3>
          <nav class="space-y-3">
            <% data.links.decidim.each do |link| %>
              <%= link_to t(link.name, default: link.name), link.url, class: "block" %>
            <% end %>
          </nav>
        </div>

        <div class="w-1/3">
          <h3 class="font-bold mb-3">About us</h3>
          <nav class="space-y-3">
            <% data.links.about_us.each do |link| %>
              <%= link_to t(link.name, default: link.name), link.url, class: "block" %>
            <% end %>
          </nav>
        </div>

        <div class="w-1/3">
          <h3 class="font-bold mb-3">Stay up to date</h3>
          <nav class="space-y-3">
            <% data.links.stay_up_to_date.each do |link| %>
              <%= link_to t(link.name, default: link.name), link.url, class: "block" %>
            <% end %>
          </nav>
          <h3 class="font-bold mt-8 mb-3">Legal</h3>
          <nav class="space-y-3">
            <% data.links.legal.each do |link| %>
              <%= link_to t(link.name, default: link.name), link.url, class: "block" %>
            <% end %>
          </nav>
        </div>
      </div>

      <div class="w-1/4">
        <h3 class="font-bold mb-3">Follow us on social media</h3>
        <nav class="space-y-3">
          <% data.links.social_media.each do |link| %>
            <%= link_to t(link.name, default: link.name), link.url, class: "block first-letter:uppercase" %>
          <% end %>
        </nav>
      </div>
    </div>

    <div>
      <h3 class="font-bold mb-3"><%= t('footer.supported_by') %></h3>
      <div class="flex items-center space-x-8">
        <a class="w-36 h-12 flex items-center" href="http://www.barcelona.cat" target="_blank">
          <%= image_tag "/images/logo_footer_barcelona.png", resize: "150x50", alt: "Ajuntament de Barcelona" %>
        </a>
        <a class="w-36 h-12 flex items-center" href="http://www.gencat.cat" target="_blank">
          <%= image_tag "/images/logo_footer_gencat.png", resize: "150x50", alt: "Generalitat de Catalunya" %>
        </a>
      </div>
    </div>

    <div class="flex items-center justify-between">
      <span class="text-gray-500">&copy; 2021 - Creative Commons By-SA</span>

      <%= partial "/partials/language-selector", :locals => { :direction => "up" } %>
    </div>

  </div>
</footer>
