---
description:
pageClass: home
---

<section>
  <div class="bg-[url('/images/hero_cover.jpg')] bg-cover bg-center bg-no-repeat">
    <div class="container pt-56 pb-12">
      <div class="md:bg-red-500 p-8 text-white rounded-xl w-3/5">
        <h2 class="h2"><%= t("index.hero.subheading") %></h2>
        <p class="par-md mt-6"><%= t("index.hero.intro") %></p>
      </div>
      <a href="<%= t(:path) %>/get-started" class="inline-block mt-6 button par-md"><%= t("index.hero.cta") %></a>
    </div>
  </div>
  <div class="container">
    <%= partial "partials/random_partners", locals: { classes: "py-8" } %>
  </div>
</section>

<section>
  <div class="container py-24 pb-12 flex space-x-4 items-stretch" data-tabs="index">
    <div class="w-2/3 relative">
      <% data.index.features.each_with_index do |feat, i| %>
        <div class="hidden absolute top-0 left-0 w-full h-full bg-gray-100 rounded-xl overflow-hidden <%= 'is-selected' if i == 0 %>" data-tab-content="<%= feat.id %>">
          <img class="w-full h-full object-contain" src="<%= feat.image %>" alt="<%= t("index.subhero.#{feat.id}") %>">
        </div>
      <% end %>
    </div>
    <div class="w-1/3">
      <ul class="divide-y-8 divide-gray-100">
        <% data.index.features.each_with_index do |feat, i| %>
          <li class="flex items-center space-x-4 py-5 cursor-pointer hover:text-red-500 transition <%= 'is-selected' if i == 0 %>" data-tab-id="<%= feat.id %>">
            <%= icon feat.icon, class: "w-6 h-6 text-red-500" %>
            <h6 class="h6"><%= t("index.subhero.#{feat.id}") %></h6>
          </li>
        <% end %>
      </ul>
      <a href="<%= t(:path) %>/features" class="button block text-center w-full par-md"><%= t("index.subhero.cta") %></a>
    </div>
  </div>
</section>

<section>
  <div class="container py-12">
    <p class="w-3/4 mx-auto text-center text-gray-500 par-xl"><%= t("index.subhero.intro") %></p>
  </div>
</section>

<section>
  <div class="container py-12 flex flex-col md:flex-row justify-between items-stretch">
    <% data.index.cards.each do |item| %>
      <div class="flex flex-col border-l-8 border-gray-100 px-10 md:w-1/3">
        <%= icon item.icon, class: "w-8 h-8 text-red-500" %>
        <h5 class="h5 mt-8"><%= t("index.cards.#{item.title}") %></h5>
        <p class="par-md text-gray-500 mt-4 mb-6"><%= t("index.cards.#{item.content}") %></p>
        <%= partial "partials/arrow-link", locals: { text: t("index.cards.#{item.link}"), url: url(item.url), classes: "text-red-500 mt-auto block" } %>
      </div>
    <% end %>
  </div>
</section>

<%= partial "/partials/testimonials" %>

<section class="bg-red-100">
  <div class="container text-red-500 py-24">
    <h6 class="h6 par-md text-red-500"><%= t('index.used_by.title') %></h2>
    <p class="par-xl mt-2"><%= t('index.used_by.heading') %></p>
    <a class="par-md underline mt-4 block" href="<%= t(:path) %>/usedby"><%= t('index.used_by.link') %></a>

    <div class="mt-24">
      <% installations = data_sort_by_priority(data_select_home(data.installations)) %>
      <div class="-mx-4 -my-2 md:-mx-16 md:-my-6 flex flex-wrap items-center">
        <% installations.each do |id, use| %>
          <a class="inline-block px-4 py-2 md:px-16 md:py-6 max-w-[120px] md:max-w-xs" href="<%= use.url %>" target="_blank" rel="noopener noreferrer">
            <img class="object-cover w-full h-full" src="<%= use.image %>" alt="<%= use.title %>" />
          </a>
        <% end %>
      </div>
    </div>
  </div>
</section>

<section>
  <div class="container py-32">
    <div class="flex items-end space-x-2">
      <h6 class="h6 button"><%= t("blog.latest") %></h6>
      <span class="w-4 h-4 rounded-full bg-red-500"></span>
    </div>
    <div class="flex flex-col md:flex-row gap-6 mt-4">
      <% blog.articles.take(2).each do |article| %>
        <article class="md:w-1/2 bg-gray-100 p-6 rounded-xl">
          <%= partial "partials/article_preview", locals: { article: article, strip: true } %>
        </article>
      <% end %>
    </div>
  </div>
</section>
