<section>
  <div class="container pt-24 pb-12">
    <div class="w-3/5 space-y-6">
      <h1 class="h1">
        <%= t("services.title") %>
      </h1>
      <p class="par-xl text-gray-500">
        <%= t("services.subtitle") %>
      </p>
    </div>
  </div>
</section>

<section>
  <div class="container py-12">
    <div class="grid md:grid-cols-2 gap-6">
      <% data.services.each do |service| %>
        <div class="flex flex-col border-l-8 border-gray-100 px-10">
          <%= icon service.icon, class: "w-9 h-10 text-red-500" %>
          <h5 class="h5 mt-8"><%= t("services.#{service.title}") %></h5>
          <p class="par-md text-gray-500 mt-4 mb-6"><%= t("services.#{service.content}") %></p>
          <div class="mt-auto">
            <%= partial "partials/arrow-link", locals: { text: t("services.touch"), url: service.url } %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

