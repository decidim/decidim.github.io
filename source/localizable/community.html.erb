---

<section>
  <div class="container pt-6 pb-6 md:pt-24 md:pb-12">
    <div class="md:w-3/5 space-y-6">
      <h1 class="h1 whitespace-nowrap">
        <%= t("community.title") %>
      </h1>
      <p class="par-xl text-gray-500">
        <%= t("community.subtitle") %>
      </p>
      <div class="par-md text-gray-500">
        <%= t("community.intro") %>
      </div>
    </div>

    <div class="mt-16">
      <%= partial "partials/arrow-link", locals: { text: t("community.cta"), url: "https://meta.decidim.org/" } %>
    </div>
  </div>
</section>

<section>
  <div class="container py-12 flex flex-col md:flex-row justify-between items-stretch">
    <% data.community.each do |community| %>
      <div class="flex flex-col border-l-8 border-gray-100 px-10 md:w-1/3">
        <%= icon community.icon, class: "w-8 h-8 text-red-500" %>
        <h5 class="h5 mt-8"><%= t("community.#{community.title}") %></h5>
      </div>
    <% end %>
  </div>
</section>

<section>
  <div class="container my-24">
    <figure>
      <div class="rounded-xl overflow-hidden bg-gray-300">
        <img class="w-full h-full object-cover" src="/images/community-picture.jpg" alt="community-picture">
      </div>
      <figcaption class="par-xs text-right text-gray-500 mt-4"><%= t("community.figcaption") %></figcaption>
    </figure>
  </div>
</section>

<%= partial "/partials/faq" %>

<%= partial "/partials/cta-banner" %>
